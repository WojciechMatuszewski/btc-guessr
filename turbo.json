{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["@btc-guessr/transport#build"],
      "outputs": ["cdk.out"]
    },
    "deploy:without-hosting": {
      "dependsOn": ["@btc-guessr/transport#build"],
      "outputs": ["cdk.out"]
    },
    "deploy:website": {
      "dependsOn": ["frontend#build"]
    },
    "lint": {},
    "typecheck": {},
    "format": {},
    "dev": {},
    "test": {},
    "bootstrap": {},
    "destroy": {}
  }
}
